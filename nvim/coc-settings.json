{
  "codeLens.enable": true,
  "diagnostic.errorSign": "🚫",
  "diagnostic.warningSign": "⚠️",
  "diagnostic.infoSign": "ℹ️",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "solargraph.transport": "stdio",
  "solargraph.checkGemVersion": false,
  "solargraph.diagnostics": true
}
